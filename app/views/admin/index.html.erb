<h2><%=current_user.role.capitalize%> orders (<%=@orders.count%>):</h2>
<div class="well">
<table class='table'>
  <thead>
    <tr>
      <th>product</th>
      <th>category</th>
      <th>created_at</th>
      <th>user-email</th>
      <th>status</th>
      <th style="width: 36px;"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to "#{Product.find_by_id(order.product_id).title}", product_path(order.product_id)  %></td>
        <td><%= Category.find_by_id(order.category_id).name %></td>
        <td><%= distance_of_time_in_words_to_now(order.created_at) %></td>
        <td><%= User.find_by_id(order.user_id).email %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>

</table>
</div>
