<% if @orders.count>0 %> 
<h3>My orders (<%=@orders.count%>)</h3>
<div class="well">
<table class='table'>
  <thead>
    <tr>
      <th>product</th>
      <th>category</th>
      <th>created_at</th>
      <th>status</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to "#{Product.find_by_id(order.product_id).title}", product_path(order.product_id)  %></td>
        <td><%= Category.find_by_id(order.category_id).name %></td>
        <td><%= distance_of_time_in_words_to_now(order.created_at) %></td>
        <td><%= order.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%else%>
<p>Заказов нет</p>
<%end%>